{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "kettle:definitions/player",
    "type": "object",
    "properties": {
        "accountID": {
            "id": "/properties/accountID",
            "description": "Instructs the server to use a specific set of rules",
            "$ref": "kettle:definitions/game_account"
        },
        "account_name": {
            "id": "/properties/account_name",
            "description": "The username of the player account",
            "type": "string"
        },
        "heroID": {
            "id": "/properties/heroID",
            "description": "The identifier of the used hero portrait",
            "$ref": "kettle:definitions/hero_id"
        },
        "cardback": {
            "id": "/properties/cardback",
            "description": "The identifier of the used cardback texture",
            "$ref": "kettle:enums/cardback"
        },
        "cards": {
            "id": "/properties/cards",
            "description": "All card identifiers used in this player's deck",
            "type": "array",
            "items": {
                "$ref": "kettle:definitions/card"
            },
            "maxItems": 120
        }
    },
    "required": [
        "accountID",
        "heroID",
        "card_back",
        "cards"
    ]
}
