{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "kettle:definitions/tag",
	"title": "Tag",
	"description": "A tag is used to attribute properties to an entity, eg health/max health/attack/# murlocs played/# turns passed",
	"type": "object",
	"properties": {
		"name": {
			"id": "/properties/name",
			"description": "Numeric representation of tag identifier",
			"type": "integer",
			"minimum": 0
			// See https://api.hearthstonejson.com/v1/enums.json for a list of all known tags
		},
		"value": {
			"id": "/properties/value",
			"description": "Numeric representation of tag value",
			"type": "integer"
		}
	},
	"required": [
		"name",
		"value"
	],
	"definitions": {},
	"additionalProperties": false
}
