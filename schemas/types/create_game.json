{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "kettle:types/create_game",
	"title": "CreateGame",
	"description": "Instructs the simulator to create a game instance with the provided data",
	"x-sender": [
		"matchmaker"
	],
	"x-receiver": [
		"simulator"
	],
	"type": "object",
	"properties": {
		"scenario": {
			"id": "/properties/scenario",
			"description": "The simulator must setup a specific scenario",
			"$ref": "kettle:enums/game_scenario"
		},
		"players": {
			"id": "/properties/players",
			"description": "Initial player state information",
			"type": "array",
			"items": {
				"$ref": "kettle:types/queue_player"
			},
			"minItems": 1
		}
	},
	"required": [
		"scenario",
		"players"
	],
	"definitions": {}
}
