{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "kettle:types/history/create_game",
	"title": "HistoryCreateGame",
	"description": "Event indicating the creation of the game",
	"x-sender": [
		"simulator"
	],
	"x-receiver": [
		"client"
	],
	"type": "object",
	"properties": {
		"game_entity": {
			"id": "/properties/game_entity",
			"description": "The entityID of the game, always 1",
			"$ref": "kettle:definitions/entity_id"
		},
		"player_entities": {
			"id": "/properties/player_entities",
			"description": "Links each player (game account) with an entityID, usually 2-3",
			"type": "array",
			"items": {
				"$ref": "#/definitions/player_entity"
			},
			"minItems": 2
		},
		"entities": {
			"id": "/properties/entities",
			"description": "All generated entities at game creation",
			"type": "array",
			"items": {
				"$ref": "kettle:definitions/entity"
			}
		}
	},
	"required": [
		"game_entity",
		"player_entities",
		"entities"
	],
	"definitions": {
		"player_entity": {
			"type": "object",
			"properties": {
				"entityID": {
					"id": "/properties/entityID",
					"description": "Identifier of the entity",
					"$ref": "kettle:definitions/entity_id"
				},
				"player": {
					"id": "/properties/player",
					"description": "Game related information of a player",
					"$ref": "kettle:definitions/player_game"
				}
			},
			"required": [
				"entityID",
				"player"
			]
		}
	}
}
