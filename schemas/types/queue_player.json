{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "kettle:types/queue_player",
    "type": "object",
    "properties": {
        "scenario": {
            "id": "/properties/scenario",
            "description": "Instructs the server to use a specific set of rules",
            "$ref": "kettle:enums/game_scenario"
        },
        "player": {
            "id": "/properties/player",
            "description": "",
            "$ref": "kettle:definitions/player"
        },
        "rules_override": {
            "id": "/properties/rules_override",
            "description": "Defines a specific start state for the player which is additive to the scenario preset",
            "$ref": "#/definitions/rules_override"
        }
    },
    "required": [
        "scenario",
        "player"
    ],
    "definitions": {
        "rules_override": {
            "id": "/definitions/rules_override",
            "type": "object",
            "properties": {
                "start_mana": {
                    "id": "/properties/start_mana",
                    "description": "Available mana for the player at the start of the game",
                    "type": "integer",
                    "maximum": 10,
                    "minimum": 0
                },
                "start_hand_size": {
                    "id": "/properties/start_hand_size",
                    "description": "The amount of cards a player has in hand at the start of the game",
                    "type": "integer",
                    "maximum": 10,
                    "minimum": 0
                },
                "start_entities": {
                    "id": "/properties/start_entities",
                    "description": "Entities starting on the player's side of the board",
                    "type": "array",
                    "items": {
                        "$ref": "kettle:types/entity"
                    },
                    "maxItems": 7
                }
            }
            // No required properties.
        }
    }
}